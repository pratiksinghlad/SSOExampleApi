{
  "info": {
    "name": "SSO Example API - Personal Accounts",
    "description": "Collection for testing Azure AD authentication with personal Microsoft accounts",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "oauth2",
    "oauth2": [
      {
        "key": "tokenName",
        "value": "Personal Account Token",
        "type": "string"
      },
      {
        "key": "challengeAlgorithm",
        "value": "S256",
        "type": "string"
      },
      {
        "key": "grant_type",
        "value": "authorization_code",
        "type": "string"
      },
      {
        "key": "pkce",
        "value": true,
        "type": "boolean"
      },
      {
        "key": "audience",
        "value": "https://graph.microsoft.com",
        "type": "string"
      },
      {
        "key": "clientId",
        "value": "8b019f08-0c45-4976-a085-bba224d83ee9",
        "type": "string"
      },
      {
        "key": "scope",
        "value": "https://graph.microsoft.com/User.Read openid profile email",
        "type": "string"
      },
      {
        "key": "authUrl",
        "value": "https://login.microsoftonline.com/consumers/oauth2/v2.0/authorize",
        "type": "string"
      },
      {
        "key": "accessTokenUrl",
        "value": "https://login.microsoftonline.com/consumers/oauth2/v2.0/token",
        "type": "string"
      },
      {
        "key": "redirect_uri",
        "value": "https://oauth.pstmn.io/v1/callback",
        "type": "string"
      },
      {
        "key": "response_type",
        "value": "code",
        "type": "string"
      },
      {
        "key": "state",
        "value": "postman-test",
        "type": "string"
      },
      {
        "key": "useBrowser",
        "value": true,
        "type": "boolean"
      }
    ]
  },
  "item": [
    {
      "name": "Test Authentication",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://localhost:5001/api/auth/userinfo",
          "protocol": "https",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "auth", "userinfo"]
        },
        "description": "Test endpoint to verify authentication is working"
      }
    },
    {
      "name": "Get User Profile",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://localhost:5001/api/user/profile",
          "protocol": "https",
          "host": ["localhost"],
          "port": "5001",
          "path": ["api", "user", "profile"]
        },
        "description": "Get user profile information"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://localhost:5001"
    }
  ]
}
